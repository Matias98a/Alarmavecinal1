<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txtNombreV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="#631313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDomicilioV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="#631313"
        app:layout_constraintStart_toStartOf="@+id/txtNombreV"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreV" />

    <TextView
        android:id="@+id/txtApelliidoV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="#631313"
        app:layout_constraintStart_toEndOf="@+id/txtNombreV"
        app:layout_constraintTop_toTopOf="@+id/txtNombreV" />

    <TextView
        android:id="@+id/txtNumeroV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="TextView"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="#631313"
        app:layout_constraintStart_toStartOf="@+id/txtApelliidoV"
        app:layout_constraintTop_toTopOf="@+id/txtDomicilioV" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="44dp"
        android:text="Borrar"
        android:textColor="@color/black"
        android:backgroundTint="#631313"
        app:layout_constraintStart_toEndOf="@+id/txtApelliidoV"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>