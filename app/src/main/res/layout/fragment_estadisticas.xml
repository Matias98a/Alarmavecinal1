<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstadisticasFragment"
    android:background="#1B1C27">


    <TextView
        android:id="@+id/textView33"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="ESTADISTICAS"
        android:background="#737373"
        android:textColor="@color/black"
        android:textSize="19sp"
        android:textAlignment="center"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnAgregarIndicador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="154dp"
        android:src="@drawable/indicador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="AGREGAR INDICADOR"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/btnAgregarIndicador"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/btnAgregarIndicador"
        app:layout_constraintTop_toBottomOf="@+id/btnAgregarIndicador" />

    <ImageButton
        android:id="@+id/btnVerEstadisticas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:src="@drawable/estadistica"
        app:layout_constraintEnd_toEndOf="@+id/btnAgregarIndicador"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnAgregarIndicador"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="VISUALIZAR ESTADISTICA"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/btnVerEstadisticas"
        app:layout_constraintStart_toStartOf="@+id/btnVerEstadisticas"
        app:layout_constraintTop_toBottomOf="@+id/btnVerEstadisticas" />


</androidx.constraintlayout.widget.ConstraintLayout>